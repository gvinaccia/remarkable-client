{
  "name": "remarkable-client",
  "version": "1.0.0",
  "description": "Unoffficial client for reMarkable",
  "main": "desktop/src/index.js",
  "author": "Giovanni Vinaccia <vinaccia.giovanni@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "copyfiles": "ncp package.json ../dist/package.json",
    "prebuild": "yarn run copyfiles && cd ../dist && yarn install --prod && cd ../desktop",
    "build": "../node_modules/.bin/tsc -p .",
    "start": "yarn run build && cd ../dist && ELECTRON_DISABLE_SECURITY_WARNINGS=true ../desktop/node_modules/.bin/electron ."
  },
  "devDependencies": {
    "@types/graceful-fs": "^4.1.2",
    "concurrently": "^3.5.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.11.1",
    "electron-reload": "^1.2.2",
    "ncp": "^2.0.0"
  },
  "dependencies": {
    "@types/download": "^6.2.2",
    "axios": "^0.18.0",
    "download": "^7.0.0",
    "graceful-fs": "^4.1.11"
  }
}
